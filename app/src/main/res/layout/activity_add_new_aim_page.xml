<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_aim_page"
    tools:context="com.example.sehyeon.aimstack.AddNewAimPage">
<!--android:background="@drawable/new_aim_page" -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/contents_container_margin_top"
        android:orientation="vertical">

        <EditText
            android:id="@+id/aimEditText"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/cell_margin"
            android:layout_marginRight="@dimen/cell_margin"
            android:background="@drawable/edit_text_underline"
            android:hint="Aim"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#FF000000"
            android:textColorHint="#767676"
            android:textCursorDrawable="@null" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <EditText
            android:id="@+id/hourEditText"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/cell_margin"
            android:layout_marginRight="@dimen/cell_margin"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_underline"
            android:hint="Hour"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#FF000000"
            android:textColorHint="#767676"
            android:inputType="number"
            android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/minuteEditText"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/cell_margin"
                android:layout_marginRight="@dimen/cell_margin"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_underline"
                android:hint="Minute"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="#FF000000"
                android:textColorHint="#767676"
                android:inputType="number"
                android:textCursorDrawable="@null" />
        </LinearLayout>
        <Button
            android:id="@+id/startDayButton"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_underline"
            android:gravity="bottom|left"
            android:hint="Start Date"
            android:paddingBottom="20dp"
            android:paddingLeft="5dp"
            android:textColor="#FF000000"
            android:textColorHint="#767676" />

        <Button
            android:id="@+id/endDayButton"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_underline"
            android:gravity="bottom|left"
            android:hint="End Date"
            android:paddingBottom="20dp"

            android:paddingLeft="5dp"
            android:textColor="#FF000000"
            android:textColorHint="#767676" />

        <Button
            android:id="@+id/saveNewAimButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="#00000000"
            android:text="ADD THIS AIM"
            android:textColor="#FF000000"
            android:textSize="20dp"
            android:textStyle="italic" />

    </LinearLayout>
</RelativeLayout>
