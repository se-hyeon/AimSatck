<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aim_stack_list_page"
    tools:context="com.example.sehyeon.aimstack.AimListPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/contents_container_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/statisticsButton"
                android:layout_width="@dimen/cell_width"
                android:layout_height="@dimen/cell_height"
                android:layout_marginLeft="@dimen/cell_margin"
                android:layout_marginRight="@dimen/cell_margin"
                android:layout_weight="1"
                android:background="@drawable/cell_background"
                android:text="Statistics"
                android:textColor="#FF000000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/addAimButton"
                android:layout_width="@dimen/cell_width"
                android:layout_height="@dimen/cell_height"
                android:layout_marginLeft="@dimen/cell_margin"
                android:layout_weight="1"
                android:background="@drawable/cell_background"
                android:text="PUSH"
                android:textColor="#FF000000"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
